---
import Mail from "../icons/Mail.astro";
import Phone from "../icons/Phone.astro";
import Map from "../icons/Map.astro";
---

<div class="w-full bg-white">
    <h2>Contact</h2>
    <div class="-mx-4 flex flex-wrap justify-center p-8">
        <div class="w-full px-4 md:w-1/2 lg:w-1/2 size-80">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.971652485652!2d19.112336740735152!3d50.81410774814679!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4710b5d13bc92935%3A0xdd1cba62f01b2d7f!2sJasnogórska%2023%2F25%2F2%2C%2042-200%20Częstochowa!5e0!3m2!1ses-419!2spl!4v1733738559612!5m2!1ses-419!2spl"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                class="size-full"
            >
            </iframe>
        </div>
        <div class="w-full px-4 md:w-1/2 lg:w-1/2 size-80">
            <ul class="list-none mx-5">
                <li class="flex items-center my-4">
                    <div class="flex items-center text-primaryDark">
                        <Mail class="mr-2" />
                        <span class="ml-2">biurolexis@gmail.com</span>
                    </div>
                </li>
                <li class="flex items-center my-4">
                    <div class="flex items-center text-primaryDark">
                        <Phone class="mr-2" />
                        <span class="ml-2">tel. 501 332 339</span>
                    </div>
                </li>
                <li class="flex items-center my-4">
                    <div class="flex items-center text-primaryDark">
                        <Map class="mr-2" />
                        <span class="ml-2">
                            ul. JAsnogórska 23/25 lok. 2 42-202 Częstochowa
                        </span>
                    </div>
                </li>
                <li class="my-4">
                    <form class="max-w-sm text-primaryDark">
                        <label
                            for="large-input"
                            class="mb-2 text-sm font-medium text-gray-900 dark:text-white"
                            >Write us</label
                        >
                        <input
                            type="text"
                            id="large-input"
                            class="w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 text-base focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        />
                    </form>
                </li>
            </ul>
        </div>
    </div>
</div>
